<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TennisAppV2.Src.Presentation.Pages.PlayerDetail.Details.DetailsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label
                    HorizontalOptions="CenterAndExpand"
                    Text="{Binding FirstName}"
                    VerticalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout>
                <Label
                    HorizontalOptions="CenterAndExpand"
                    Text="{Binding LastName}"
                    VerticalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout>
                <Label
                    HorizontalOptions="CenterAndExpand"
                    Text="{Binding Gender}"
                    VerticalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout>
                <Label
                    HorizontalOptions="CenterAndExpand"
                    Text="{Binding Country}"
                    VerticalOptions="CenterAndExpand" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>